<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>NASEBANAL Platform for IoT</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">NASEBANAL Platform for IoT</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
        <% if current_user %>
          <ul class="nav navbar-nav">
						<li><%= link_to 'WorkOrders', workorders_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Menu <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/">TBD</a></li>
              </ul>
            </li>
          </ul>
        <% end %>

          <form class="navbar-form navbar-right">
            <% if current_user %>
              <font color="white"><%= current_user.name %></font> <%= link_to 'Logout', logout_path, class: 'btn btn-success' %>

            <% else %>
            <%= link_to 'Login', '/auth/github', class: 'btn btn-success' %>
            <% end %>
          </form>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>


    <div id="content">

      <%= yield %>

      <hr>

      <footer>
        <p>&copy; NASEBANAL 2015</p>
      </footer>

    </div> <!-- /container -->

</body>
</html>
