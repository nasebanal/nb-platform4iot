<p id="notice"><%= notice %></p>

<h1>Listing Settings</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>USER</th>
      <th>WAITING TIME</th>
      <th width="150">ACTION</th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.user.name %></td>
        <td><%= setting.wait_time %></td>
        <td><%= link_to 'Show', setting, class: "btn btn-primary btn-block" %>
        <%= link_to 'Edit', edit_setting_path(setting), class: "btn btn-primary btn-block" %>
        <%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Setting', new_setting_path %>
